{
  "name": "autorefresh",
  "version": "1.0.0",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "build:win": "pkg . --targets node18-win-x64 --output dist/autorefresh-win.exe",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/autorefresh-mac",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/autorefresh-linux",
    "build:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output dist/autorefresh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "playwright": "^1.57.0",
    "pngjs": "^7.0.0",
    "pixelmatch": "^6.0.0",
    "jpeg-js": "^0.4.4",
    "@techstark/opencv-js": "^4.12.0-release.1",
    "jimp": "^0.22.10"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "node_modules/playwright-core/**/*",
      "node_modules/playwright/**/*"
    ],
    "outputPath": "dist"
  }
}
